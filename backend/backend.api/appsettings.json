{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "User Id=${DB_USER};Password=${DB_PASSWORD};Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};"
  },
  "AllowedHosts": "*",
  "JwtOptions": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "ExpiresHours": "${JWT_SECRET_KEY}"
  },
  "AuthorizationOptions": {
    "RolePermissions": [
      { "Role": "Admin", "Permission": ["Create", "Read", "Update", "Delete"] },
      { "Role": "User", "Permission": ["Read"] }
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  }
}
